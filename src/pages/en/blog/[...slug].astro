---
import Layout from '~/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('post');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const Content = post.rendered?.html;

const metadata = {
  title: post.data.title,
  description: post.data.excerpt,
  keywords: post.data.tags,
};
---

<Layout metadata={metadata}>
  <article class="py-32 bg-black">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <header class="mb-16">
        <div class="flex items-center mb-4">
          <span class="text-sm text-orange-500 font-medium uppercase tracking-wider">
            {post.data.category}
          </span>
          <span class="mx-2 text-gray-600">•</span>
          <time class="text-sm text-gray-400" datetime={post.data.publishDate?.toISOString()}>
            {post.data.publishDate?.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6">
          {post.data.title}
        </h1>
        {post.data.excerpt && (
          <p class="text-xl text-gray-300 max-w-3xl">
            {post.data.excerpt}
          </p>
        )}
        {post.data.tags && (
          <div class="mt-6 flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="text-sm bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </header>

      {post.data.image && (
        <div class="mb-16">
          <img
            src={post.data.image}
            alt={post.data.title}
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      )}

      <div class="prose prose-lg prose-invert max-w-none" set:html={Content}></div>
    </div>
  </article>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-orange-500 to-orange-600">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Need Help with Your Digital Strategy?
      </h2>
      <p class="text-xl text-orange-100 mb-8">
        At AIR Consulting we help you implement these strategies in your Cádiz business.
      </p>
      <a
        href="/en/#contacto"
        class="inline-block px-8 py-4 bg-white text-orange-600 font-bold rounded-full hover:bg-gray-100 transition-colors duration-200"
      >
        Request Free Consultation
      </a>
    </div>
  </section>
</Layout>
