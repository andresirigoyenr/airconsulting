    // Spot slider
    let spotCurrent = 0;
    const spotSlides = document.querySelectorAll('#spot .slide');
    function showSpotSlide(index) {
      spotSlides.forEach(slide => slide.classList.remove('active'));
      spotSlides[index].classList.add('active');
