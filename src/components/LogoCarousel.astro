---
const logos = [
  { image: '/images/Airdigital.png', name: 'AIRdigital' },
  { image: '/images/Airconsulting.png', name: 'AIRconsulting' },
  { image: '/images/Airbrand.png', name: 'AIRbrand' },
];
---

<section class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <h2 class="text-4xl md:text-5xl font-bold text-center text-white mb-12">Nuestras Marcas</h2>
    <div class="logo-container max-w-4xl mx-auto">
      <!-- Slider Container -->
      <div class="relative overflow-hidden">
        <div class="flex animate-slide">
          {logos.map((logo) => (
            <div class="flex-shrink-0 w-1/3 px-4">
              <div class="flex justify-center items-center h-16">
                <img
                  src={logo.image}
                  alt={logo.name}
                  class="max-h-12 max-w-32 object-contain opacity-100 hover:opacity-80 transition-opacity duration-300"
                />
              </div>
            </div>
          ))}
          <!-- Duplicate for seamless loop -->
          {logos.map((logo) => (
            <div class="flex-shrink-0 w-1/3 px-4">
              <div class="flex justify-center items-center h-16">
                <img
                  src={logo.image}
                  alt={logo.name}
                  class="max-h-12 max-w-32 object-contain opacity-100 hover:opacity-80 transition-opacity duration-300"
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-slide {
    animation: slide 20s linear infinite;
  }

  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
