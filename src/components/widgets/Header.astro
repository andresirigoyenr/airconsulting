<header id="header" class="fixed top-0 left-0 w-full z-50">
  <!-- Top Bar - Logo Section -->
  <div class="bg-black/95 backdrop-blur-md border-b border-gray-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-center py-3">
        <a href="/" class="flex items-center" id="logo-link" title="AIR Consulting - Agencia de marketing digital en Cádiz">
          <img src="/images/logo.png" alt="AIRconsulting - Agencia de marketing digital en Cádiz" class="h-12 md:h-16 w-auto animate-fade-in" />
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom Bar - Navigation Section -->
  <div class="bg-black/90 backdrop-blur-md border-b border-gray-800/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-between py-3">
        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center space-x-8 lg:space-x-10">
          <a href="/" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-sm lg:text-base font-medium tracking-wide" data-target="/" title="Inicio - AIR Consulting">Inicio</a>
          <a href="#servicios" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-sm lg:text-base font-medium tracking-wide" data-target="#servicios" title="Servicios de marketing digital">Servicios</a>
          <a href="/portafolio" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-sm lg:text-base font-medium tracking-wide" data-target="/portafolio" title="Portafolio de proyectos">Portafolio</a>
          <a href="/equipo" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-sm lg:text-base font-medium tracking-wide" data-target="/equipo" title="Conoce nuestro equipo">Equipo</a>
          <a href="#contacto" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-sm lg:text-base font-medium tracking-wide" data-target="#contacto" title="Contacta con nosotros">Contacto</a>
        </nav>

        <!-- CTA Button -->
        <div class="hidden md:flex items-center space-x-4">
          <a href="/trabaja-con-nosotros" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-6 py-2 rounded-full font-medium text-sm hover:from-orange-600 hover:to-orange-700 transition-all duration-300 transform hover:scale-105">
            Trabaja con nosotros
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="md:hidden text-white p-2 hover:bg-white/10 rounded-lg transition-colors duration-200" aria-label="Abrir menú">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden fixed inset-0 bg-black/98 backdrop-blur-md hidden z-50 flex items-center justify-center">
    <div class="flex flex-col space-y-8 text-center px-6">
      <a href="/" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-lg font-medium tracking-wide py-2" onclick="closeMobileMenu()" data-target="/" title="Inicio - AIR Consulting">Inicio</a>
      <a href="#servicios" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-lg font-medium tracking-wide py-2" onclick="closeMobileMenu()" data-target="#servicios" title="Servicios de marketing digital">Servicios</a>
      <a href="/portafolio" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-lg font-medium tracking-wide py-2" onclick="closeMobileMenu()" data-target="/portafolio" title="Portafolio de proyectos">Portafolio</a>
      <a href="/equipo" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-lg font-medium tracking-wide py-2" onclick="closeMobileMenu()" data-target="/equipo" title="Conoce nuestro equipo">Equipo</a>
      <a href="#contacto" class="nav-link text-gray-300 hover:text-orange-400 transition-colors duration-300 text-lg font-medium tracking-wide py-2" onclick="closeMobileMenu()" data-target="#contacto" title="Contacta con nosotros">Contacto</a>
      <div class="pt-4 border-t border-gray-700">
        <a href="/trabaja-con-nosotros" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-8 py-3 rounded-full font-medium text-lg hover:from-orange-600 hover:to-orange-700 transition-all duration-300 inline-block" onclick="closeMobileMenu()">
          Trabaja con nosotros
        </a>
      </div>
    </div>
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', () => {

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn') as HTMLButtonElement | null;
  const mobileMenu = document.getElementById('mobile-menu') as HTMLDivElement | null;
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      document.body.classList.toggle('overflow-hidden');
    });
  }

  // Desktop navigation accordion toggle
  const desktopNavToggle = document.getElementById('desktop-nav-toggle') as HTMLButtonElement | null;
  const desktopNav = document.getElementById('desktop-nav') as HTMLDivElement | null;
  if (desktopNavToggle && desktopNav) {
    desktopNavToggle.addEventListener('click', () => {
      desktopNav.classList.toggle('hidden');
    });
  }

  // Close mobile menu on link click
  const mobileMenuLinks = document.querySelectorAll('#mobile-menu a');
  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', () => {
      closeMobileMenu();
      document.body.classList.remove('overflow-hidden');
    });
  });

  // Smart navigation logic
  const navLinks = document.querySelectorAll('.nav-link') as NodeListOf<HTMLAnchorElement>;

  navLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      const target = link.getAttribute('data-target');
      if (!target) return;

      // If it's an anchor link (starts with #)
      if (target.startsWith('#')) {
        // If we're not on the home page, redirect to home page with anchor
        if (window.location.pathname !== '/') {
          e.preventDefault();
          window.location.href = '/' + target;
        }
        // If we're on home page, let the default anchor behavior work
      }
      // If it's a page link, let it work normally
    });
  });

  // Logo click to go home
  const logoLink = document.getElementById('logo-link') as HTMLAnchorElement | null;
  if (logoLink) {
    logoLink.addEventListener('click', (e) => {
      if (window.location.pathname !== '/') {
        // If not on home page, prevent default and redirect
        e.preventDefault();
        window.location.href = '/';
      }
      // If on home page, let default behavior work
    });
  }
});

function closeMobileMenu() {
  const mobileMenu = document.getElementById('mobile-menu') as HTMLDivElement | null;
  if (mobileMenu) {
    mobileMenu.classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
  }
}
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1.5s ease-out;
  }
</style>
