---
import { Icon } from 'astro-icon/components';

// --- DATOS A PERSONALIZAR ---
const socialLinks = [
  { ariaLabel: 'Instagram', icon: 'tabler:brand-instagram', href: 'https://www.instagram.com/retoricacl/' },
  { ariaLabel: 'LinkedIn', icon: 'tabler:brand-linkedin', href: 'https://www.linkedin.com/company/airconsulting' },
  { ariaLabel: 'Facebook', icon: 'tabler:brand-facebook', href: 'https://www.facebook.com/airconsulting.cl' },
  { ariaLabel: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/airconsulting' },
];

const currentLocale = Astro.currentLocale;
const isEnglish = currentLocale === 'en';

const footerText = isEnglish ? {
  description: 'Transforming businesses through innovative digital strategies. We create experiences that connect people, brands, and emotions.',
  location: 'Santiago · Chile',
  contact: 'Contact',
  developedBy: 'Developed by AIRConsulting.',
  services: 'Services',
  quickLinks: 'Quick Links',
  newsletter: 'Newsletter',
  newsletterDesc: 'Stay updated with our latest insights and strategies.',
  emailPlaceholder: 'Enter your email',
  subscribe: 'Subscribe',
  copyright: 'All rights reserved.',
  privacy: 'Privacy Policy',
  terms: 'Terms of Service'
} : {
  description: 'Transformamos negocios a través de estrategias digitales innovadoras. Creamos experiencias que conectan personas, marcas y emociones.',
  location: 'Santiago · Chile',
  contact: 'Contacto',
  developedBy: 'Desarrollado por AIRConsulting.',
  services: 'Servicios',
  quickLinks: 'Enlaces Rápidos',
  newsletter: 'Newsletter',
  newsletterDesc: 'Mantente actualizado con nuestras últimas ideas y estrategias.',
  emailPlaceholder: 'Ingresa tu email',
  subscribe: 'Suscribirse',
  copyright: 'Todos los derechos reservados.',
  privacy: 'Política de Privacidad',
  terms: 'Términos de Servicio'
};

const services = isEnglish ? [
  'Web Development',
  'Digital Marketing',
  'SEO Optimization',
  'Social Media Management',
  'Brand Strategy',
  'Consulting'
] : [
  'Desarrollo Web',
  'Marketing Digital',
  'Optimización SEO',
  'Gestión de Redes Sociales',
  'Estrategia de Marca',
  'Consultoría'
];

const quickLinks = isEnglish ? [
  { text: 'About Us', href: '#sobre-nosotros' },
  { text: 'Services', href: '#servicios' },
  { text: 'Process', href: '#proceso' },
  { text: 'Results', href: '#casos-exito' },
  { text: 'Contact', href: '#contacto' },
  { text: 'Work with us', href: '/trabaja-con-nosotros' }
] : [
  { text: 'Sobre Nosotros', href: '#sobre-nosotros' },
  { text: 'Servicios', href: '#servicios' },
  { text: 'Proceso', href: '#proceso' },
  { text: 'Resultados', href: '#casos-exito' },
  { text: 'Contacto', href: '#contacto' },
  { text: 'Trabaja con nosotros', href: '/trabaja-con-nosotros' }
];

const year = new Date().getFullYear();
---

<footer class="relative bg-gradient-to-br from-black via-gray-900 to-black border-t border-orange-500/20 overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 bg-gradient-to-r from-orange-500/5 via-transparent to-orange-500/5"></div>
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-orange-500/10 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-orange-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>

  <!-- Main Footer Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-12 pb-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">

      <!-- Company Info Column -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <a class="inline-block font-bold text-xl sm:text-2xl text-white mb-4 hover:text-orange-400 transition-colors duration-300" href="/">
            AIR Consulting®
          </a>
          <p class="text-gray-300 text-sm leading-relaxed mb-4">
            {footerText.description}
          </p>
          <div class="text-gray-400 text-sm space-y-1">
            <p class="flex items-center">
              <Icon name="tabler:map-pin" class="w-4 h-4 mr-2 text-orange-400 flex-shrink-0" />
              <span>{footerText.location}</span>
            </p>
            <p class="flex items-center">
              <Icon name="tabler:mail" class="w-4 h-4 mr-2 text-orange-400 flex-shrink-0" />
              <span>andres.irigoyen@gmail.com</span>
            </p>
            <p class="flex items-center">
              <Icon name="tabler:phone" class="w-4 h-4 mr-2 text-orange-400 flex-shrink-0" />
              <span>+45 50249855</span>
            </p>
          </div>
        </div>

        <!-- Social Links -->
        <div>
          <h3 class="text-white font-semibold mb-4">{footerText.contact}</h3>
          <div class="flex flex-wrap gap-3">
            {socialLinks.map(({ ariaLabel, href, icon }) => (
              <a
                class="group relative p-2 sm:p-3 bg-white/5 hover:bg-orange-500/20 rounded-full transition-all duration-300 hover:scale-110 hover:shadow-lg hover:shadow-orange-500/25"
                href={href}
                aria-label={ariaLabel}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon name={icon} class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400 group-hover:text-orange-400 transition-colors duration-300" />
                <div class="absolute inset-0 rounded-full bg-orange-500/20 scale-0 group-hover:scale-100 transition-transform duration-300"></div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Services Column -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-6">{footerText.services}</h3>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a href="#servicios" class="text-gray-400 hover:text-orange-400 transition-colors duration-300 text-sm hover:translate-x-1 inline-block transform">
                {service}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links Column -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-6">{footerText.quickLinks}</h3>
        <ul class="space-y-3">
          {quickLinks.map(({ text, href }) => (
            <li>
              <a href={href} class="text-gray-400 hover:text-orange-400 transition-colors duration-300 text-sm hover:translate-x-1 inline-block transform">
                {text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter Column -->
      <div class="sm:col-span-2 lg:col-span-1">
        <h3 class="text-white font-semibold text-lg mb-4 sm:mb-6">{footerText.newsletter}</h3>
        <p class="text-gray-400 text-sm mb-4">{footerText.newsletterDesc}</p>
        <form class="space-y-3">
          <div class="relative">
            <input
              type="email"
              placeholder={footerText.emailPlaceholder}
              class="w-full px-3 sm:px-4 py-2 sm:py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-300 text-sm sm:text-base"
            />
            <Icon name="tabler:mail" class="absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4 sm:w-5 sm:h-5 text-gray-500" />
          </div>
          <button
            type="submit"
            class="w-full px-4 sm:px-6 py-2 sm:py-3 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-orange-500/25 text-sm sm:text-base"
          >
            {footerText.subscribe}
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Bottom Section -->
  <div class="relative z-10 border-t border-white/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col space-y-4">


        <!-- Legal Links - Centered -->
        <div class="flex flex-wrap items-center justify-center space-x-4 space-y-2 sm:space-y-0 text-xs text-gray-400">
          <a href="/privacy" class="hover:text-orange-400 transition-colors duration-300">
            {footerText.privacy}
          </a>
          <span class="hidden sm:inline text-white/20">|</span>
          <a href="/terms" class="hover:text-orange-400 transition-colors duration-300">
            {footerText.terms}
          </a>
        </div>

        <!-- Copyright - Centered -->
        <div class="text-gray-400 text-xs text-center">
          © {year} AIR Consulting®. {footerText.copyright}
        </div>
      </div>
    </div>
  </div>
</footer>
