---
import { Icon } from 'astro-icon/components';

// --- DATOS A PERSONALIZAR ---
const socialLinks = [
  { ariaLabel: 'Instagram', icon: 'tabler:brand-instagram', href: 'https://www.instagram.com/retoricacl/' },
];

const currentLocale = Astro.currentLocale;
const isEnglish = currentLocale === 'en';

const footerText = isEnglish ? {
  description: 'Agency and producer of experiences, entertainment and marketing.',
  location: 'Santiago · Chile',
  contact: 'Contact',
  developedBy: 'Developed by AIRConsulting.'
} : {
  description: 'Agencia de experiencias que conectan personas, marcas y emociones.',
  location: 'Santiago · Chile',
  contact: 'Contacto',
  developedBy: 'Desarrollado por AIRConsulting.'
};

const year = new Date().getFullYear();
---

<footer class="border-t border-primary/40">
  <!-- Footer Superior -->
  <div class="bg-black py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 flex items-center justify-between">
      <!-- Logo a la izquierda -->
      <div>
        <a class="inline-block font-bold text-xl text-white" href="/">Retórica®</a>
      </div>
      <!-- Iconos de redes sociales en el centro -->
      <div class="flex space-x-4">
        {
          socialLinks.map(({ ariaLabel, href, icon }) => (
            <a
              class="text-white hover:opacity-80 transition duration-150 ease-in-out p-1"
              href={href}
              aria-label={ariaLabel}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name={icon} class="w-8 h-8" />
            </a>
          ))
        }
      </div>
      <!-- Espacio vacío a la derecha para centrar -->
      <div class="w-20"></div>
    </div>
  </div>

  <!-- Footer Inferior -->
  <div class="bg-black max-w-7xl mx-auto px-4 sm:px-6 py-8">
    <div class="text-sm text-white flex flex-col md:flex-row md:justify-between">
      <div>
        <p class="mb-2">{footerText.description}</p>
        <p class="mb-2">{footerText.location}</p>
        <p class="mb-2 font-semibold">{footerText.contact}</p>
        <p>cristobal@retorica.cl</p>
        <p>+56 9240 1998</p>
      </div>
    </div>
    <!-- Logo sutil en la parte inferior -->
    <div class="flex justify-center mt-8 pt-4 border-t border-white/10">
      <img src="/images/optimized/logo.webp" alt="AIRconsulting - Agencia de marketing digital en Cádiz" class="h-8 w-auto opacity-60 hover:opacity-80 transition-opacity duration-300" />
    </div>
    <!-- Copyright y desarrollador más abajo -->
    <div class="text-center text-xs text-white/70 mt-6 pt-4 border-t border-white/10">
      <p>© {year} Retórica®</p>
      <p class="mt-1"><a href="https://www.facebook.com/airconsulting.cl" target="_blank" rel="noopener noreferrer" class="hover:text-white/90 transition-colors">{footerText.developedBy}</a></p>
    </div>
  </div>
</footer>
