---
import { Icon } from 'astro-icon/components';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = 'Toggle High Contrast mode',
  class: className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
  iconName = 'tabler:contrast',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-high-contrast>
  <Icon name={iconName} class={iconClass} />
</button>
